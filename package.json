{
  "name": "hwaddress",
  "type": "module",
  "version": "1.1.0",
  "description": "Small utilities to work with hardware (MAC/EUI) addresses.",
  "license": "MIT",
  "keywords": [
    "mac",
    "oui",
    "eui-48",
    "eui-64",
    "hardware-address"
  ],
  "main": "./dist/hwaddress.js",
  "types": "./dist/hwaddress.d.ts",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:cov:watch": "vitest --coverage --watch",
    "changeset": "changeset",
    "version:packages": "changeset version && npm i",
    "patchup": "npm --no-git-tag-version version patch",
    "minorup": "npm --no-git-tag-version version minor",
    "versionup": "npm --no-git-tag-version version patch",
    "build": "tsc"
  },
  "author": "mtsdevel @ github dot com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/develmts/hwaddress.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@tsconfig/node16": "^16.1.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.2.4",
    "chai": "^5.2.0",
    "tap": "^21.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "got": "^14.4.7"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "bugs": {
    "url": "https://github.com/develmts/hwaddress/issues"
  },
  "homepage": "https://github.com/develmts/hwaddress#readme"
}
