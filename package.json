{
  "name": "hwaddress",
  "type": "module",
  "version": "1.2.0",
  "description": "Small utilities to work with hardware (MAC/EUI) addresses.",
  "license": "MIT",
  "keywords": [
    "mac",
    "oui",
    "eui-48",
    "eui-64",
    "hardware-address"
  ],
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/cjs/index.js",
  "types": "./dist/hwaddress.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "imports": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:cov:watch": "vitest --coverage --watch",
    "changeset": "changeset",
    "bench:simple": "npm run build && node Bench/hwaddress.simple-bench.mjs",
    "version:packages": "changeset version && npm i",
    "patchup": "npm --no-git-tag-version version patch",
    "minorup": "npm --no-git-tag-version version minor",
    "versionup": "npm --no-git-tag-version version patch",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json && node -e \"require('fs').mkdirSync('dist/cjs',{recursive:true}); require('fs').writeFileSync('dist/cjs/package.json','{\\n  \\\"type\\\": \\\"commonjs\\\"\\n}\\n')\"",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "clean": "rimraf dist"
  },
  "author": "mtsdevel @ github dot com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/develmts/hwaddress.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@tsconfig/node16": "^16.1.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.2.4",
    "rimraf": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "got": "^14.4.7"
  },
  "bugs": {
    "url": "https://github.com/develmts/hwaddress/issues"
  },
  "homepage": "https://github.com/develmts/hwaddress#readme"
}
